  <body>
<div class="col-md-4 col-md-offset-4">

    <div class="col-md-33">
        <div class = "panel panel-primary">
            <div class = "panel-heading">Fill in details</div>
                <div class ="panel-body">
                   
                
                    
                    <%= form_for @profile do |f| %>

                        
                        <div class="form-group">
                        <%= f.label :name %>
                        <%= f.text_field :name, required: true, placeholder: "Write your name" %>
                        </div>

                        <div class="form-group">
                        <%= f.label :base_url %>
                        <%= f.text_field :base_url ,class: "form-control"%>
                        </div>

                        <div class="form-group">
                        <%= f.label :auth_type%>
                        <%= f.text_field :auth_type ,class: "form-control"%>
                        

                        </div>

                        <div class="form-group">
                        <%= f.label :default_user_name %>
                        <%= f.text_field :default_user_name ,class: "form-control"%>
                        </div>

                        <div class="form-group">
                        <%= f.label :default_password %>
                        <%= f.text_field :default_password ,autocomplete: "off",class: "form-control"%>
                        </div>

                        <br /> 

                        <div class="actions form-group">
                        <%= f.submit "Update" , class: "btn btn-success" %>
                        </div>

                        <% end %>
                        </body>
                        </form>
                 </div>
                 </div>
            </div>
        </div>
    
    </div>
